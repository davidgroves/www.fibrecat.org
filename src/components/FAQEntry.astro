---
const { question, answer } = Astro.props;
---

<div class="faq-question">
    <h1 class="faq-page">
        {question}
    </h1>
    <div class="faq-body">
        <p set:html={answer}>
        </p>
    </div>
</div>
<hr class="hr-line">

<style>
    
    .faq-heading{
        border-bottom: #777;
        padding: 5px 10px;
        font-size: 20px;
        border: none !important;
        outline: none;
    }
    .faq-container{
    display: flex;
    justify-content: center;
    flex-direction: column;
    border: none !important;
    outline: none !important;
    }
    .faq-question {
        outline: none;
        font-size: 8px;
    }
    .faq-body {
        outline: none;
        font-size: 14px;
    }
    
    .hr-line{
    width: 100%;
    height: 1px;
    margin: none;

    }
    /* Style the buttons that are used to open and close the faq-page body */
    .faq-page {
        /* background-color: #eee; */
        color: #444;
        cursor: pointer;
        padding: 5px 5px;
        width: 98%;
        border: none;
        outline: none;
        transition: 0.4s;
        margin: none;
    }
    .faq-body{
        margin: none;
        width: 98%; 
        padding: auto;
        outline: none;
    }
    /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
    .active,
    .faq-page:hover {
        background-color: #F9F9F9;
    }
    /* Style the faq-page panel. Note: hidden by default */
    .faq-body {
        padding: 0 2px;
        background-color: white;
        display: none;
        overflow: hidden;
    }
    .faq-page:after {
        content: '\02795';
        /* Unicode character for "plus" sign (+) */
        font-size: 26px;
        color: #777;
        float: right;
        margin-left: 5px;
    }
    .active:after {
        content: "\2796";
        /* Unicode character for "minus" sign (-) */
    }
</style>